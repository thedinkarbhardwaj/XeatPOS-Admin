<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="4dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txt_quentity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_weight="1"
            android:fontFamily="@font/test"
            android:text="1 * Pizza"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@+id/txt_amount"
            android:textColor="@color/text_color"
            android:textSize="@dimen/_9sdp" />

        <TextView
            android:id="@+id/txt_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_20sdp"
            android:text="$444"
            android:layout_alignParentRight="true"
            android:fontFamily="@font/test"
            android:textColor="@color/text_color"
            android:textSize="@dimen/_9sdp" />

    </RelativeLayout>



    <TextView
        android:id="@+id/txt_AddOns"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/add_ons"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="2dp"
        android:fontFamily="@font/test"
        android:textColor="@color/black"
        android:textSize="@dimen/_7sdp" />

    <LinearLayout android:id="@+id/layoutAddOnDynamic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="27dp"

        android:orientation="vertical">


    </LinearLayout>


</LinearLayout>